
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title - Sản Phẩm</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        .fakeimg {
            height: 200px;
            background: #aaa;
        }
    </style>
</head>
<body>
    
    <div class="jumbotron text-center" style="margin-bottom:0;background:#f2f84e">
        <h1 style="color:#1e5ffb">SHOP ĐIỆN THOẠI ĐẠT YẾN</h1>
    </div>
    
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
       
        <div class="top-nav clearfix" style="margin-left:auto;margin-right:100px;margin-top:15px;color:white">
            <!--search & user info start-->
            <ul class="nav pull-right top-menu">
                <li>
                    <p>Hello @ViewBag.adName</p>
                </li>
                <!-- user login dropdown start-->
                <li class="dropdown" style="width:50px">
                    <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                        <img alt="" src="images/avatar1_small.jpg">
                        <span class="username">

                        </span>
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu extended logout">


                        <li><a href="@Url.Action("Logout", "Home",new { area="Admin"})"><i class="fa fa-key" ></i> Đăng Xuất</a></li>
                    </ul>
                </li>
                <!-- user login dropdown end -->
                <li>
                    <div class="toggle-right-box">
                        <div class="fa fa-bars"></div>
                    </div>
                </li>
            </ul>
            <!--search & user info end-->
        </div>
    </nav>

    <div class="container" style="margin-top:30px">
        <div class="row">
            <div class="col-sm-3" style="background:#efebeb">
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" style="background:#1e5ffb;color:#f2f84e" href="#">LOẠI SẢN PHẨM</a>
                    </li>
                    @foreach (var item in ViewBag.ListCategory)
                    {
                        <li class="nav-item">
                            <a class="nav-link" style="color:#1e5ffb" href="#">@item.Name</a>
                        </li>
                    }
                </ul>
                <hr class="d-sm-none">
            </div>
            
            <div class="col-sm-9" style="padding-bottom:50px;">
                <h2>Danh Sách Sản Phẩm</h2>
                <div class="row">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    

</body>
</html>
